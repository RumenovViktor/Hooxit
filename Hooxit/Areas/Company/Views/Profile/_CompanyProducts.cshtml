@model IEnumerable<Hooxit.Presentation.Implementation.Company.Read.ProductReadModel>

<div class="card top">
    <div class="card-block">
        <div class="card-text text-center">
            <h4 class="card-title">Products<a href="#" class="addProduct" data-toggle="modal" data-target="#companyAddProductModal"><i class="fa fa-plus navbar-toggler-right" aria-hidden="true"></i></a></h4>
            <br />
            @if (!Model.Any())
            {
                <p>No products added...</p>
            }
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted"></h6>
            <h4 class="card-text">@Model.Count() products</h4>
            <a href="#" class="card-link" data-toggle="modal" data-target="#allProducts">See products</a>
            <br />
            <br />
            <br />
        </div>
    </div>
}

<div class="modal fade" id="allProducts" tabindex="-1" role="dialog" aria-labelledby="allProducts" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Products</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Url</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <th scope="row">@product.Name</th>
                                @if (!string.IsNullOrWhiteSpace(product.Url))
                                {
                                <td>
                                    <a href="@product.Url" target="_blank" class="btn btn-primary">View</a>
                                </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>