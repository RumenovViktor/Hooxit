<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hooxit</title>
    <environment names="Development">
        @*<link href="~/css/font-awesome.css" rel="stylesheet" />*@
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/bootstrap.css" />
        <link href="~/css/mdb.css" rel="stylesheet" />
        <link href="~/css/material-kit.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
        <link href="~/css/MaterialButtons.css" rel="stylesheet" />
        <link href="https://cdn.quilljs.com/1.3.5/quill.snow.css" rel="stylesheet"> @*TODO: Use is from file, not CDN*@
    </environment>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-dark bg-primary">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav1" aria-controls="navbarNav1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Dashboard", new { area = "Company" })">
                <strong>Hooxit</strong>
            </a>
            <div class="collapse right navbar-collapse" id="navbarNav1">
                <ul class="navbar-nav mr-auto"></ul>
                <ul class="navbar-nav ml-auto nav-flex-icons">
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light"><i class="fa fa-bell" aria-hidden="true"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light"><i class="fa fa-envelope"></i></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle waves-effect waves-light" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="fa fa-user"></i></a>
                        <div class="dropdown-menu dropdown-secondary dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                            <a class="dropdown-item waves-effect waves-light" href="@Url.Action("Profile", "Profile", new { area = "Company", username = User.Identity.Name })">
                                <i class="fa fa-user" aria-hidden="true"></i> Profile
                            </a>
                            <a class="dropdown-item waves-effect waves-light" href="#">
                                <i class="fa fa-lock" aria-hidden="true"></i> Privacy
                            </a>
                            <a class="dropdown-item waves-effect waves-light" href="#">
                                <i class="fa fa-gear" aria-hidden="true"></i>
                                Settings
                            </a>
                            <a class="dropdown-item waves-effect waves-light" href="@Url.Action("Logout", "Account", new { area = "Account" })">
                                <i class="fa fa-sign-out" aria-hidden="true"></i> Logut
                            </a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light">Try Premium</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Html.Partial("~/Views/Resources/Urls.cshtml")

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script> @*TODO: Use is from file, not CDN*@
        <script src="~/js/bootstrap-datepicker.js"></script>
        <script src="~/js/tether.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/mdb.js"></script>
        <script src="~/js/base/ajaxSender.js"></script>
        <script src="https://cdn.quilljs.com/1.3.5/quill.js"></script> @*TODO: Use is from file, not CDN*@

        <script>
            $('.datepicker').datepicker({
                weekStart: 1,
                format: 'mm/dd/yyyy'
            });
        </script>
    </environment>
    @RenderSection("scripts", required: false)
    @RenderSection("ProfileScripts", required: false)
    @RenderSection("PositionManager", required: false)
    @RenderSection("PositionView", required: false)
    @RenderSection("CompanyProfileScripts", required: false)
    @RenderSection("CompanyDashboardScripts", required: false)
</body>
</html>
