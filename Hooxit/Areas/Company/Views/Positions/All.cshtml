@using Hooxit.Presentation
@model IEnumerable<IdNameReadModel>

<div class="top row">
    <div class="col">
        <ul class="list-group">

            @foreach (var position in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("View", "Positions", new { area = "Company", username = User.Identity.Name, positionId = position.Id })" >@position.Name</a>
                </li>
            }
        </ul>
    </div>
    <div class="col">
        <a class="btn btn-default btn-circle" href="@Url.Action("Create", "Positions")">
            <i class="fa fa-plus"></i>
        </a>
    </div>
</div>
