@model Hooxit.Presentation.Register

<div class="flex-center top">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-block">
                <form asp-area="Account" asp-action="Register" asp-controller="Account">
                    <div class="form-header default-color">
                        <h3><i class="fa fa-user"></i> Register:</h3>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-user prefix"></i>
                        <input asp-for="@Model.UserName" type="text" id="form3" class="form-control">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <label for="form3">Your Username</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-envelope prefix"></i>
                        <input asp-for="@Model.Email" type="email" id="form2" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label for="form2">Your email</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix"></i>
                        <input asp-for="@Model.Password" type="password" id="form4" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label for="form4">Your password</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix"></i>
                        <input asp-for="@Model.ConfirmPassword" type="password" id="form4" class="form-control">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <label for="form4">Confirm your password</label>
                    </div>
                    <div class="text-center">
                        <button class="btn default-color-dark">Sign up</button>
                        <hr>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>