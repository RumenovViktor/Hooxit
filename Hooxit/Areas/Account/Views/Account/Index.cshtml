@model Hooxit.Presentation.Login

<div class="flex-center top">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-block">
                <form method="post" asp-area="Account" asp-controller="Account" asp-action="Login">
                    <div class="text-center">
                        <h3><i class="fa fa-lock"></i> Login</h3>
                        <hr class="mt-2 mb-2">
                    </div>
                    <div class="md-form">
                        <i class="fa fa-envelope prefix"></i>
                        <input asp-for="@Model.UserName" type="text" id="form2" class="form-control">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <label for="form2">Your Username</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix"></i>
                        <input asp-for="@Model.Password" type="password" id="form4" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label for="form4">Your password</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn default-color">Login</button>
                    </div>
                </form>
            </div>
            <div class="text-center">
                <div class="options">
                    <p>Not a member? <a href="@Url.Action("Register", "Account")">Sign Up</a></p>
                    <p>Forgot <a href="#">Password?</a></p>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>